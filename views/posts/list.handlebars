{{> top }} {{> header }} {{> nav }}
<div class="row marketing">
    <div class="col-lg-10 col-lg-offset-1 panel">
        <div class="panel-title clearfix">
            <h2>文章列表</h2>
            <input type="search" class="search"  placeholder="输入关键字" id="searchPost" value="{{ keyword }}"/><button onclick="search()" class="btn btn-search">搜索</button>
        </div>
        <div class="row row-width float-left panel-body">
            <div class="panel-heading">
                时间：&nbsp;<a href="/blog/posts?sort=created_at">倒序</a>|<a href="/blog/posts">正序</a>
            </div>
            <div class="col-lg-6 float-left post-list">
                <dl class="dl">
                    {{#each posts}}
                    <dt><a href="/blog/posts/{{ ID }}" class="post-title"><img width="24" height="24" src="{{ getUserAvatarURL(authorID) }}"/>&nbsp;{{ title }}</a></dt>
                    <dd>{{ friendlyTime(createdAt) }} - {{ getUserName(authorID) }}</dd>
                    <br/> {{/each}}
                    <dt>{{{ pagerContent }}}</dt>
                </dl>
            </div>
            <div class="col-lg-4 float-left ranks">
                <h4>今日活跃排行榜</h4>
                <ol>
                    {{#each hotAuthors}}
                    <li><a href="#" uid="{{ ID }}">{{ name }}</a></li>
                    {{/each}}
                </ol>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
function search() {
    i = document.getElementById("searchPost")
    if (i.value != "") {
        window.location.href='/blog/posts/search?keyword='+i.value;
    }
}
</script>
{{> footer }} {{> bottom }}
