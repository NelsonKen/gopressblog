{{> top }} {{> header }} {{> nav }}
<div class="row marketing">
  <div class="col-lg-10 col-lg-offset-1 panel">
      <div class="panel-heading clearfix">
          <h2>文章列表</h2>
      </div>
    <div class="row row-width float-left panel-body">
      <div class="col-lg-6 float-left post-list">
        <dl class="dl">
          {{#each posts}}
          <dt><a href="/blog/posts/{{ ID }}" class="post-title">{{ title }}</a></dt>
          <dd>{{ createdAt }} - {{ getUserName(authorID) }}</dd>
          <br/>
          {{/each}}
          <dt>{{{ pagerContent }}}</dt>
        </dl>
      </div>
      <div class="col-lg-4 float-left ranks">
        <h4>今日活跃排行榜</h4>
        <ol>
         {{#each hotAuthors}}
          <li><a href="#" uid="{{ ID }}">{{ name }}</a></li>
          {{/each}}
        </ol>
      </div>
    </div>
  </div>
</div>
{{> footer }} {{> bottom }}
